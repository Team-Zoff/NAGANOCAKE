<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="mx-auto", style="width:600px;">
     <h2>管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-horizontal") do |f| %>

<div class="field">
    <div class="row">
    <div class="col-md-4 text-right"><%= f.label :email, "メールアドレス", class:"col-form-label" %></div>
    <div class="col-ms-4 text-right"><%= f.email_field :email, autofocus: true, autocomplete: "email"%></div>
    </div>
  </div>


<div class="field">
    <div class="row">
    <div class="col-md-4 text-right"><%= f.label :password, "パスワード", class:"col-form-label" %></div>
    <div class="col-ms-4 text-right"><%= f.password_field :password, autocomplete: "current-password"%></div>
    </div>
  </div>


    <div class="col text-center">
     <div class="col-12">
     <%= f.submit "ログイン", class:"btn btn-primary"%>
     </div>
    </div>
  <% end %>
 </div>
</div>
</div>
</div>

