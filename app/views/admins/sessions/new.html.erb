<div class="container" style="margin:5vw 50px 0;">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2 text-center">
      <h5 class="text-light bg-info">管理者ログイン</h5>
   </div>
  </div>
</div>

<div class="container" style="margin-top:30px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-horizontal") do |f| %>
    <div class="row">
      <div class="col-5 text-right">
        <%= f.label :email, "メールアドレス", class:"col-form-label" %>
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width: 250px;" %>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-5 text-right">
        <%= f.label :password, "パスワード", class:"col-form-label" %>
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", style:"width: 250px;" %>
     </div>
    </div>
    <div class="row">
      <div class="col text-center">
        <%= f.submit "ログイン", class:"btn btn-secondary", style:"width: 100px;" %>
      </div>
    </div>
  <% end %>
</div>


