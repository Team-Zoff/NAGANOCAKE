<div class="container" style="margin:4vw 50px 0;">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2 text-center">
      <h5 class="text-light bg-info">会員情報の編集</h5>
	</div>
  </div>
</div>
<div class="container mt-3">
	<form>
		<div class="row">
			<div class="col-2">会員ID</div>
			<div class="col-3 text-center">1</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<label for="inputName" class="col-form-label">氏名</label>
			</div>
			<div class="col-3">
				<input id="inputName" type="text" class="form-control" placeholder="姓">
			</div>
			<div class="col-3">
				<input type="text" class="form-control" placeholder="名">
			</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<label for="inputName" class="col-form-label">フリガナ</label>
			</div>
			<div class="col-3">
				<input id="inputName" type="text" class="form-control" placeholder="セイ">
			</div>
			<div class="col-3">
				<input type="text" class="form-control" placeholder="メイ">
			</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<label for="inputText" class="col-form-label">郵便番号</label>
			</div>
			<div class="col-3">
				<input type="text" class="form-control" placeholder="1231234">
			</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<label for="inputText" class="col-form-label">住所</label>
			</div>
			<div class="col-3">
				<input type="text" class="form-control" placeholder="日本">
			</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<label for="inputText" class="col-form-label">電話番号</label>
			</div>
			<div class="col-3">
				<input type="text" class="form-control" placeholder="12312341234">
			</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<label for="inputEmail3" class="col-form-label">メールアドレス</label>
			</div>
			<div class="col-3">
				<input type="text" class="form-control" placeholder="zoff@zoff">
			</div>
		</div>
		<div class="form-row mt-3">
			<div class="col-2">
				<legend class="col-form-label">会員ステータス</legend>
			</div>
			<div class="col-4 row">
				<div class="col">
					<div class="form-check">
						<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
						<label class="form-check-label" for="gridRadios1">有効</label>
					</div>
				</div>
				<div class="col">
				    <div class="form-check">
         				 <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
          				<label class="form-check-label" for="gridRadios2">退会済み</label>
      				</div>
				</div>
			</div>
		</div>
	</form>
	<div class="row mt-3">
		<div class="col">
			<%= link_to "変更を保存する", admins_members_show_path, class:"btn btn-secondary" %>
   		</div>
	</div>
</div>
