<div class="container" style="margin:1vw 50px 0;">
  <div class="row offset-2">
    <div class="col-2 text-center">
      <h5 class="bg-info text-white rounded p-1 mt-5">会員一覧</h5>
	</div>
  </div>
</div>

<div class="continer">
  <div class="row justify-content-center mt-4">
    <table class="table table-bordered col-6">
    	<thead class="bg-info text-white">
			<tr>
				<th scope="col">会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody class="bg-light">
			<% @members.each do |member| %>
			<tr>
				<td><%= member.id %></td>
				<td><%= link_to "#{member.last_name}" "#{member.first_name}", admins_member_path(member.id), class:"link_font_color" %></td>
				<td><%= member.email %></td>
				<td><%= member.deleted_status_i18n %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
  </div>
    <div class="row mt-3">
  	<div class="col">
  		<%= paginate @members %>
  		</div>
    </div>
</div>
