<div class="container" style="margin:4vw 50px 0;">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2 text-center">
      <h5 class="text-light bg-info">会員詳細</h5>
	</div>
  </div>
</div>

<div class="continer mt-4">
	<div class="row mt-2 ml-5">
		<div class="col-2">顧客ID</div>
		<div class="col">
			<%= @member.id %>
			<%= @member.deleted_status_i18n %>
		</div>
	</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">氏名</div>
		<div class="col">
			<%= @member.last_name %>
			<%= @member.first_name %>
		</div>
	</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">フリガナ</div>
		<div class="col">
			<%= @member.last_name_kana %>
			<%= @member.first_name_kana %>
		</div>
	</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">郵便番号</div>
		<div class="col">
			<%= @member.postal_code %>
		</div>
	</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">住所</div>
		<div class="col">
			<%= @member.address %>
		</div>
	</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">電話番号</div>
		<div class="col">
			<%= @member.telephone %>
		</div>
		</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">メールアドレス</div>
		<div class="col">
			<%= @member.email %>
		</div>
	</div>
	<div class="row mt-2 ml-5">
		<div class="col-2">
			<%= link_to "編集する", edit_admins_member_path, class:"btn link_font_color" %>
		</div>
		<div class="col">
			<%= link_to "注文履歴一覧を見る", admins_orders_path, class:"link_font_color" %>
		</div>
	</div>
</div>