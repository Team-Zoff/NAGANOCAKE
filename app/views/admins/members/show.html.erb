<div class="container" style="margin:1vw 50px 0;">
  <div class="row">
    <div class="col-2 text-center">
      <h5 class="bg-info text-white rounded p-1 mt-5">会員詳細</h5>
	</div>
  </div>
</div>

<div class="continer mt-4">
<div class="row ml-5">
	<table class="col-4 table table-border bg-light">
    <tr>
		  <th>顧客ID</th>
		   <td>
			   <%= @member.id %>
			   <%= @member.deleted_status_i18n %>
		   </td>
    </tr>
    <tr>
		  <th>氏名</th>
		  <td>
			  <%= @member.last_name %>
			  <%= @member.first_name %>
		  </td>
    </tr>
    <tr>
		  <th>フリガナ</th>
		  <td>
			  <%= @member.last_name_kana %>
			  <%= @member.first_name_kana %>
		  </td>
    </tr>
    <tr>
		  <th>郵便番号</th>
		  <td>
			  <%= @member.postal_code %>
		  </td>
    </tr>
    <tr>
		  <th>住所</th>
		  <td>
			  <%= @member.address %>
		  </td>
    </tr>
    <tr>
		  <th>電話番号</th>
		  <td>
			  <%= @member.telephone %>
		  </td>
    </tr>
    <tr>
		  <th>メールアドレス</th>
		  <td>
			  <%= @member.email %>
		  </td>
    </tr>
  </table>
 </div>
 <div class="row ml-5">
		<div class="col-2 mt-3">
			<%= link_to "編集する", edit_admins_member_path, class:"btn btn-primary btn-sm  mt-20" %>
		</div>
		<div class="col mt-3">
			<%= link_to "注文履歴一覧を見る", admins_orders_path(member_id: @member.id), class:"btn btn-primary btn-sm  mt-20" %>
		</div>
  </div>
</div>
