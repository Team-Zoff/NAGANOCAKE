<div class="container" style="margin:4vw 50px 0;">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2 text-center">
      <h5 class="text-light bg-info">注文履歴一覧</h5>
	</div>
  </div>
</div>
<div class="continer">
  <div class="row justify-content-center mt-4">
    <table class="table col-6">
    <thead>
		<tr>
			<th scope="col">購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
			<% @orders.each do |order| %>
		<tr>
			<td><%= link_to order.created_at, admins_orders_show_path %></td>
			<td><%= order.member_id.last_name %></td>
			<td><%#= order.注文詳細モデルから引っ張る %></td>
			<td><%= order.order_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>

