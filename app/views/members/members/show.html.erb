<h2 class="mypage-title">マイページ</h2>
<h3>登録情報</h3>
<%= link_to "編集する",class:"btn btn-info mr-3" %>
<%= link_to "パスワードを変更する",class:"btn btn-info" %>

<table class="table">
  <thead>
    <tr>
      <th>氏名</th>
      <td><%= @member.last_name %>  <%= @member.first_name %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>カナ</th>
      <td><%= @member.last_name_kana %>  <%= @member.first_name_kana %></td>
    </tr>
    <tr>
    	<th>郵便番号</th>
    	<td><%= @member.postal_code %></td>
    </tr>
    <tr>
    	<th>住所</th>
    	<td><%= @member.address %></td>
    </tr>
    <tr>
    	<th>電話番号</th>
    	<td><%= @member.telephone %></td>
    </tr>
    <tr>
    	<th>メールアドレス</th>
    	<td><%= @member.email %></td>
    </tr>
  </tbody>
</table>

<h3>配送先</h3><%= link_to "一覧を見る",class:"btn btn-info" %>
<h3>注文履歴</h3><%= link_to "一覧を見る",class:"btn btn-info" %>
