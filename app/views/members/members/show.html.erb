<div>
    <%= notice %>
</div>
<div class="container" style="margin:4vw 50px 0;">
    <div class="row">
        <div class="col-2 text-center">
            <h5 class="text-light bg-info p-1 rounded">マイページ</h5>
        </div>
    </div>
    <div class="row" style="margin-top:10px;">
        <div class="col-7">
            <b>登録情報　</b>
            <span>
                <%= link_to "編集する",edit_members_member_path,class:"btn-sm btn-primary" %></span>
            <span>
                <%= link_to "パスワードを変更する", password_edit_registrations_path,class:"btn-sm btn-primary" %></span>
        </div>
    </div>
    <div class="row" style="margin-top:10px;">
        <div class="col-8">
            <table class="table">
                <tbody>
                    <tr>
                        <td class="tbody1">氏名</td>
                        <td class="tbody2">
                            <%= @member.last_name %>
                            <%= @member.first_name %>
                        </td>
                    </tr>
                    <tr>
                        <td class="tbody1">カナ</td>
                        <td class="tbody2">
                            <%= @member.last_name_kana %>
                            <%= @member.first_name_kana %>
                        </td>
                    </tr>
                    <tr>
                        <td class="tbody1">郵便番号</td>
                        <td class="tbody2">
                            <%= @member.postal_code %>
                        </td>
                    </tr>
                    <tr>
                        <td class="tbody1">住所</td>
                        <td class="tbody2">
                            <%= @member.address %>
                        </td>
                    </tr>
                    <tr>
                        <td class="tbody1">電話番号</td>
                        <td class="tbody2">
                            <%= @member.telephone %>
                        </td>
                    </tr>
                    <tr>
                        <td class="tbody1">メールアドレス</td>
                        <td class="tbody2">
                            <%= @member.email %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <b>配送先　　</b>
            <%= link_to "一覧を見る", members_shipping_addresses_path, class:"btn-sm btn-primary" %>
        </div>
    </div>
    <div class="row" style="margin-top:10px;">
        <div class="col-7">
            <b>注文履歴　</b>
            <%= link_to "一覧を見る",members_orders_path,class:"btn-sm btn-primary" %>
        </div>
    </div>
</div>
</div>
