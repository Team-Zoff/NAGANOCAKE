<div class="container mx-5 mt-5">
    <div class="row">
        <div class="col-3">
            <%= render 'layouts/genres_sidebar' %>
        </div>
        <div class="col-9">
            <div class="row mt-3">
                <h5 class="col-auto">商品一覧
                    <%= "(全#{Product.where(sale_status: "sale").count}件)" %>
                </h5>
            </div>
            <div class="row">
                <% @products.each do |products| %>
                <% if products.sale_status == "sale" %>
                <div class='col-4 mt-3 pl-3'>
                    <%= attachment_image_tag(products, :product_image, size: '220x167',class: "img-thumbnail") %><br>
                    商品名：
                    <%= link_to members_product_path(products.id) do %>
                    <%= products.product_name %>
                    <% end %><br>
                    税抜価格：
                    <%= "¥#{products.price_excluding_tax}" %>
                </div>
                <%= paginate @products,class:"text-center" %>
            </div>
            <% end %>
            <% end %>
        </div>
    </div>
</div>
</div>