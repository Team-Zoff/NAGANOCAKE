<div class="container mx-5 mt-5">
  <div class="row">
      <%= render partial: 'layouts/genres_sidebar',class:"col-4" %>
    <h2 class="mt-3">商品一覧<%= "(全#{@products.count}件)" %></h2>
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-5 ml-2 mt-3">
      <%= attachment_image_tag(product, :product_image, size: "300x250") %><br>
      <%= link_to members_product_path(product) do %>
        <%= product.product_name %>
      <% end %>
      <%= "¥#{product.price_excluding_tax}" %>
      </div>
      <% end %>
      <%= paginate @products,class:"mx-auto" %>
    </div>
  </div>
</div>
