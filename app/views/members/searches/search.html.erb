<div class="container mx-5 mt-5">
    <div class="row">
        <div class="col-3">
            <%= render partial: 'layouts/genres_sidebar',locals: {genres:@genres} %>
        </div>
        <div class="col-9">
            <div class="col-5 ml-2 mt-3">
              <h5 class="mt-3">検索結果 「<%= @content %>」</h5>
            </div>
            <div class='row'>
                <div class="col-12">
                    <div class="row">
                        <% @products.each do |products| %>
                        <div class='col-4 mt-3 pl-3'>
                            <%= attachment_image_tag(products, :product_image, size: '209x167',class: "img-thumbnail") %><br>
                            <%= link_to members_product_path(products.id) do %>
                            <%= products.product_name %>
                            <% end %>
                            <%= "¥#{products.price_excluding_tax}" %>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
