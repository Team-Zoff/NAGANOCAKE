<div>
  <%= notice %>
</div>
<h2>配送先編集</h2>
<% if @shipping_address.errors.any? %>
<div>
  <h3><%= @shipping_address.errors.count %> errors prohibited this ShippingAddres from being saved:</h3>
  <ul>
    <% @shipping_address.errors.full_messages.each do |mssage| %>
    <li><%= mssage %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for(@shipping_address, url:members_shipping_address_path(@shipping_address.id)) do |f| %>
 <div class="field">
  <%= f.label :postal_code,"郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, class: "col-xs-12" %>
</div>

<div class="field">
  <%= f.label :address, "住所" %> <!-- ここを変更 -->
  <%= f.text_area :address, class: "col-xs-12" %>
</div>

<div class="field">
  <%= f.label :address_name, "宛先" %> <!-- ここを変更 -->
  <%= f.text_area :address_name, class: "col-xs-12" %>
</div>

<div class="actions">
  <%= f.submit "編集する", class: "btn btn-primary col-xs-12" %>
 </div>
<% end %>
