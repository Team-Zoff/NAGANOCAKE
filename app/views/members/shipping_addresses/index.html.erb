<div>
  <%= notice %>
</div>
<div class="row">
  <h2>配送先登録/一覧</h2>
  <div class="col-xs-3">
    <% if @ShippingAddres.errors.any? %>
    <div>
      <h3><%= @ShippingAddres.errors.count %> errors prohibited this ShippingAddres from being saved:</h3>
      <ul>
        <% @ShippingAddres.errors.full_messages.each do |mssage| %>
        <li><%= mssage %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_for(@ShippingAddres) do |f| %>
  	 <div class="field ">
  		<%= f.label :郵便番号(ハイフンなし) %>
  		<%= f.text_field :postal_code, class: "col-xs-12" %>
  	</div>

  	<div class="field ">
  		<%= f.label :住所 %> <!-- ここを変更 -->
  		<%= f.text_area :address, class: "col-xs-12" %>
  	</div>

    <div class="field ">
  		<%= f.label :宛先 %> <!-- ここを変更 -->
  		<%= f.text_area :address_name, class: "col-xs-12" %>
  	</div>

  	<div class="actions ">
  		<%= f.submit "登録する", class: "btn btn-primary col-xs-12" %>
  	 </div>
    <% end %>
  </div>
  <div class="col-xs-9">
    <table class="table">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
          <th></th>
				</tr>
			</thead>
			<tbody>
				<% @ShippingAddress.each do |ShippingAddress| %>
				<tr>
					<td><%= ShippingAddress.postal_code%></td>
					<td><%= ShippingAddress.address %></td>
					<td><%= ShippingAddress.address_name %></td>
					<td>
            <%= link_to '編集する',edit_members_shipping_address_path(ShippingAddress),class: 'btn btn-primary'%>
          </td>
					<td>
            <%= link_to '削除する',members_shipping_address_path(ShippingAddress), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger"%>
          </td>
				</tr>
				<% end %>
			</tbody>
		</table>
  </div>
</div>
