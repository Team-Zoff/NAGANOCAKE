<div class="container" style="margin:3vw 50px 0;">
    <div class="row">
        <div class="col-2 text-center">
             <h5 class="bg-info text-white rounded p-1 mt-5">注文履歴詳細</h5>
        </div>
    </div>
</div>
<div class="container">
  <div class="row">
   <h5 class="border-bottom border-info">注文情報</h5>
    <table class="table-bordered col-6">
      <tbody>
        <tr>
          <th>注文日</th>
          <td>12/31<%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>日本<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.address_name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.method_of_payment_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>入金確認<%= @order.order_status %></td>
        </tr>
      </tbody>
    </table>
    <h5 class="offset-1 border-bottom border-info">請求情報</h5>
    <table class='table-bordered col-4 offset-1'>
      <tbody>
        <tr>
          <th>商品の合計</th>
          <td><%= @total %>円</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_free %>円</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= "#{@total + @order_shipping_free}" %>円</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mt-4">
    <h5 class="col-6 p-0">注文内容</h5>
  <div class="row mt-1">
      <table class='table table-bordered col-6'>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込み)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_detail.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.product.product_name %>
            </td>
            <td>
              <%= "#{(order_detail.product.price_excluding_tax * 1.1).to_i}" %>円
            </td>
            <td>
              <%= order_detail.purchase_quantity %>個
            </td>
            <td>
              <%= subtotal = order_detail.product.price_excluding_tax * order_detail.purchase_quantity %>円
            </td>
          </tr>
          <% end %>
        </tbody>
       </table>
    </div>
  <div>
</div>
