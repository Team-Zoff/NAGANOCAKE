<div class="container">

<div class="row">

<div class="col-md-8 offset-md-2 text-center">

<div class="row">
<div class="col-md-5 text-left bg-light">　会員の方はこちらからログイン　</div>
<div class="col-md-7"></div>
</div><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
     <div class="row">
<div class="col-md-3 text-right">
    <%= f.label :email ,"メールアドレス" %>
  </div>
  <div class="col-md-9">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"60",style:"border-radius: 0.2em"%>
  </div>
</div>


  <div class="field">
    <div class="row">
    <div class="col-md-3 text-right">
      <%= f.label :password,"パスワード　　" %>
    </div>
    <div class="col-md-9"><%= f.password_field :password, autocomplete: "current-password",:size=>"60",style:"border-radius: 0.2em"  %></div>
  </div>
</div>


<!--  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>-->

<div class="text-right">
<%= render "members/shared/links" %>
</div>
  <div class="actions">
    <%= f.submit "　　ログイン　　" ,class:"btn-primary btn-sm  mt-20"%>
  </div><br>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="row">
<div class="col-md-5 text-left bg-light">　会員登録がお済みではない方　</div><br>
<div class="col-md-7"></div>
</div>
  <div class="text-left ml-5"><%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。</div>
<% end %>
<% end %>
</div>
</div>
<div class="col-md-2 "></div>
</div>
</div>

